@{
    ViewData["Title"] = "Delete";
}
@model Category;

<form action="" method="post">
    <input asp-for="Id" hidden>
    <div class="mb-3">
        <label asp-for="Name">Name</label>
        <input class="form-control" type="text" asp-for="Name" disabled>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder">Display Order</label>
        <input class="form-control" type="number" class="form-control" asp-for="DisplayOrder" disabled>
    </div>
    <div class="mb-3">
        <button class="btn btn-danger" type="submit">Delete</button>
        <button class="btn btn-outline-secondary" asp-action="Index" type="submit">Cancel</button>
    </div>
</form>